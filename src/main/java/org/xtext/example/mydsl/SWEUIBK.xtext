grammar org.xtext.example.mydsl.SWEUIBK with org.eclipse.xtext.common.Terminals

generate sWEUIBK "http://www.xtext.org/example/mydsl/SWEUIBK"

Domainmodel:
	elements+=ObjectDeclaration* actions+=ObjectAction*;


ObjectDeclaration:
    monitor = MonitorDeclaration | analyzer = AnalyzerDeclaration | page = PageDeclaration | model = ModelDeclaration ;

ModelDeclaration:
    'Model' name=ID;


MonitorDeclaration:
    'Monitor' name=ID url = MonitorInitialization;

MonitorInitialization:
    url = STRING ;

AnalyzerDeclaration:
    'Analyzer' name = Analyzer;

Analyzer: name=ID;

PageDeclaration:
    'Page' name=ID;

ObjectAction:
    monitorAction = MonitorObjectAction|analyzerAction = AnalyzerObjectAction|pageAction = PageObjectAction|modelAction = ModelAction;


ModelAction:
    name=ID '.' 'loadStructure' '(' modelStructure = ModelStructure+ ')';

ModelStructure:
    source = STRING ;


MonitorObjectAction:
    (name=ID '.' (value=MonitorOperations) '(' method=MethodParameter? ')');

AnalyzerObjectAction:
	name=ID '.' (value=AnalyzerOperations) '(' method=MethodParameter? ')';

PageObjectAction:
	name=ID '.'(((value=PageOperations) '(' method=MethodParameter? ')')| headerList=GenerateHeader);

GenerateHeader:
    'generateHeaderList' '('  Header* ')';


Header:
    STRING '(' STRING ')';

MethodParameter:
	STRING  ;


enum MonitorOperations :
    ADD='AddAnalyzer' |
    REMOVE='RemoveAnalyzer';

enum AnalyzerOperations :
    LOADPAGE='LoadPage' |
    EXECUTE='Execute'|
    REMOVE='RemovePage'|
    LOADMODEL='LoadModel';

enum PageOperations :
    URL='url' |
    CONNECTIONTYPE = 'connectType';

enum ConnectionType:
    POST='post'|
    GET='get';